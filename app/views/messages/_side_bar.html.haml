.sidebar
  .sidebar__username
    .sidebar__username__title
      .sidebar__username__title__nickname
        = current_user.nickname
      .sidebar__username__title__icon
        .sidebar__username__title__icon__edit
          = link_to new_group_path, class: "sidebar__username__title__icon__edit--btn" do
            = icon('far', 'edit')
        .sidebar__username__title__icon__cog
          = link_to edit_user_path(current_user), class: "sidebar__username__title__icon__cog--btn" do
            = icon('fas', 'cog')
  .sidebar__grouplist
    - current_user.groups.each do |group|
      .sidebar__grouplist__group
        = link_to '#' do
          .sidebar__grouplist__group__group-name
            = group.name
          .sidebar__grouplist__group__group-text
            まだメッセージがありません
    